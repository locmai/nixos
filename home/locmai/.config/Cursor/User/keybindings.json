[
    {
        "key": ";",
        "command": "type",
        "args": {
            "text": ":"
        },
        "when": "editorTextFocus && vim.mode == 'Normal'"
    },
    {
        "key": "space e",
        "command": "runCommands",
        "args": {
          "commands": [
            "workbench.action.toggleSidebarVisibility",
            "workbench.view.explorer"
          ]
        },
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "g d",
        "command": "editor.action.goToTypeDefinition",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "g D",
        "command": "editor.action.goToDeclaration",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "g i",
        "command": "editor.action.goToImplementation",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "g c c",
        "command": "editor.action.commentLine",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space g b",
        "command": "gitlens.toggleFileBlame",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space e",
        "command": "runCommands",
        "args": {
          "commands": [
            "workbench.action.toggleSidebarVisibility",
            "workbench.action.focusLastEditorGroup"
          ]
        },
        "when": "(filesExplorerFocus || sideBarFocus) && vim.mode != 'Insert'"
    },
    {
        "key": "space space",
        "command": "workbench.action.quickOpen",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space f f",
        "command": "workbench.action.quickOpenLeastRecentlyUsedEditorInGroup",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space s g",
        "command": "workbench.action.findInFiles",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space `",
        "command": "workbench.action.terminal.toggleTerminal",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space c",
         "command": "runCommands",
         "args": {
            "commands": [
                "workbench.action.toggleAuxiliaryBar",
                "chat.action.focus"
            ]
         },
        "when": "!auxiliaryBarFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space c",
         "command": "runCommands",
         "args": {
            "commands": [
                "workbench.action.toggleAuxiliaryBar",
                "workbench.action.focusLastEditorGroup"
            ]
         },
        "when": "auxiliaryBarFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space t",
        "command": "workbench.action.navigateback",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space a",
        "command": "vscode-harpoon.addEditor",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space h",
        "command": "vscode-harpoon.editorQuickPick",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space 1",
        "command": "vscode-harpoon.gotoEditor1",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space 2",
        "command": "vscode-harpoon.gotoEditor2",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space 3",
        "command": "vscode-harpoon.gotoEditor3",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space 4",
        "command": "vscode-harpoon.gotoEditor4",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    }
]
